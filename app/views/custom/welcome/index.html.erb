<% content_for :canonical do %>
    <%= render "shared/canonical", href: root_url %>
<% end %>

<section class="mbr-box mbr-section mbr-section--relative mbr-section--fixed-size mbr-section--full-height mbr-section--bg-adapted mbr-parallax-background" id="header2-1">
  <div class="mbr-box__magnet mbr-box__magnet--sm-padding mbr-box__magnet--center-left">
    <div class="mbr-box__container mbr-section__container container">
      <div class="mbr-box mbr-box--stretched">
        <div class="mbr-box__magnet mbr-box__magnet--center-left">
          <div class="mbr-hero animated fadeInUp">
            <h1 style="padding-top: 10%"><%= t("layouts.header.open_city_title") %></h1>
            <p class="mbr-hero__subtext" style="padding-top: 5%"><%= t("layouts.header.open_city_slogan_html") %></p>
          </div>
          <div class="mbr-buttons btn-inverse mbr-buttons--left">
            <%= link_to t("layouts.header.more_info"), more_info_path, class: "mbr-buttons__btn btn btn-lg btn-default animated fadeInUp delay" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% cache [locale_and_user_status, @featured_debates, @featured_proposals, 'featured'] do %>
    <section class="content-2 col-4" id="features1-4" style="background-color: rgb(193, 193, 193)">
      <div class="container">
        <div class="row">
          <div>
            <div class="thumbnail">
              <a href="/proposals"><img alt="" src="/assets/proyectos.png" /></a>
              <div class="caption">
                <div>
                  <h3><%= t("welcome.proposal.title") %></h3>
                  <p><%= t("welcome.proposal.description") %></p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <div class="thumbnail">
              <a href="/debates"><img alt="" src="/assets/evaluacion.png" /></a>
              <div class="caption">
                <div>
                  <h3><%= t("welcome.debates.title") %></h3>
                  <p><%= t("welcome.debates.description") %></p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <div class="thumbnail">
              <a href="/polls"><img alt="" src="/assets/votacion.png" /></a>
              <div class="caption">
                <div>
                  <h3><%= t("welcome.decide.title") %></h3>
                  <p><%= t("welcome.decide.description") %></p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <div class="thumbnail">
              <a href="/budgets"><img alt="" src="/assets/ejecucion.png" /></a>
              <div class="caption">
                <div>
                  <h3><%= t("welcome.do.title") %></h3>
                  <p><%= t("welcome.do.description") %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<% end %>
