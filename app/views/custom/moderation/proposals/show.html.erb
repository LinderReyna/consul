<%= link_to moderation_proposals_path do %>
  <span class="icon-angle-left"></span> <%= t("shared.back") %>
<% end %>

<h2>Rechazar Propuesta</h2>

<%= form_for @proposal, url: moderation_proposal_path(@proposal) do |f| %>
  <%= render 'shared/errors', resource: @proposal %>
  <div id="unfeasible_fields" >
    <div class="row">
      <div class="small-12 column">
        <%= f.label :rejection_description, "¿Por qué debe rechazarse esta propuesta? <small>(se notificará por email al autor)</small>" %>
        <%= f.text_area :rejection_description, label: false, rows: 3 %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="actions small-12 medium-4 column">
      <%= f.submit(class: "button", value: "Enviar") %>
    </div>
  </div>
<% end %>

<h1><%= @proposal.title %></h1>

<h4><%= @proposal.question %></h4>

<p>
  <%= t("proposals.form.proposal_type") %>:
  <strong><%= @proposal.tipe %></strong>
</p>

<% if @proposal.level.present? %>
  <p>
    <%= t("proposals.form.proposal_level") %>:
    <strong><%= @proposal.level %></strong>
  </p>
<% end %>

<blockquote><%= @proposal.summary %></blockquote>

<%= safe_html_with_links @proposal.description %>
